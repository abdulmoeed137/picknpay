<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background2"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/t_container">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:id="@+id/btn_signin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"

                android:textColor="@color/QRCodeBlackColor"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/signin_view"
                android:layout_gravity="center_horizontal"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="@color/mainColor"></View>

        </LinearLayout>

        <View
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_vertical"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:background="@color/QRCodeBlackColor"
            android:layout_marginRight="15dp"></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/btn_signup">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/QRCodeBlackColor"/>
            <View
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="@color/mainColor"
                android:id="@+id/signup_view"></View>


        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
         android:background="@drawable/rounded_edittext"
         android:drawableLeft="@drawable/envelop"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLength="20"
        android:padding="15dp"
        android:textColorHint="@color/textcolor" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/name"
            android:maxLength="20"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPersonName"
            android:textColorHint="@color/textcolor"
            android:hint="Name"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/phone"
            android:maxLength="20"
            android:drawableLeft="@drawable/envelop"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPersonName"
            android:textColorHint="@color/textcolor"
            android:hint="Phone"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText

            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="15dp"
            android:textColorHint="@color/textcolor" />


    </LinearLayout>
    <TextView
        android:id="@+id/forget"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Forgot Password"
        android:textSize="14dp"
        android:textColor="@color/textcolor"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/guest"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Continue as Guest"
        android:textSize="16dp"
        android:textColor="@color/mainColor"
        android:textStyle="bold"/>
    <android.support.design.widget.FloatingActionButton

        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_grey"
        app:backgroundTint="@color/crop__button_bar"
        app:fabSize="normal"
        android:layout_margin="10dp"/>

</LinearLayout>



