<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smith Johnson"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_background"
                    />

            </RelativeLayout>


            <TextView
                android:padding="2dp"
                android:layout_marginTop="3dp"
                android:textSize="10dp"
                android:textColor="@color/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YE kar k dikhao , aur ye kr k dikhao, ab ye kar k dikahoooo , hahahahhahahahah"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">
                    <LinearLayout

                        android:gravity="center"
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_bg_both_sided">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"

                        android:textSize="8dp"
                        android:textColor="@color/grey_background"
                        />
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textSize="8dp"
                            android:textColor="@color/grey_background"
                            />
                    </LinearLayout>
                    <RatingBar

                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:numStars="5"
                        android:rating="3" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>